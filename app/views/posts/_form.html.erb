      </div>
      <div class="field">
        <%= f.label "alt" %> <br />
        <%= f.text_field :alt, :class => 'form-control'%>
      </div>
      <div class="field">
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            Save
          <% end %>
      <% end %>
    </div>
  </div>
</div>